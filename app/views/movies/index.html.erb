<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<div id="movies">
  <table>
    <thead>
      <tr>
        <th><%= link_to "Title", movies_path(sort: "title", direction: (params[:sort] == "title" && session[:direction] == "asc") ? "desc" : "asc") %></th>
        <th><%= link_to "Rating", movies_path(sort: "rating", direction: (params[:sort] == "rating" && session[:direction] == "asc") ? "desc" : "asc") %></th>
        <th><%= link_to "Release Date", movies_path(sort: "release_date", direction: (params[:sort] == "release_date" && session[:direction] == "asc") ? "desc" : "asc") %></th>
        <th>View</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td class="<%= params[:sort] == "title" ? (session[:direction] == "asc" ? "highlighted-asc" : "highlighted-desc") : "" %>"> <%= movie.title %> </td>
          <td class="<%= params[:sort] == "rating" ? (session[:direction] == "asc" ? "highlighted-asc" : "highlighted-desc") : "" %>"> <%= movie.rating %> </td>
          <td class="<%= params[:sort] == "release_date" ? (session[:direction] == "asc" ? "highlighted-asc" : "highlighted-desc") : "" %>"> <%= movie.release_date.strftime("%m/%d/%Y") %> </td>
          <td><%= link_to "Show", movie %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<button bgcolor="green"><%= link_to "New movie", new_movie_path(sort: session[:sort], direction: session[:direction]) %></button>

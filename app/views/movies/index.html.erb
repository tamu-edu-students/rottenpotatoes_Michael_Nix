<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>
<% value= session[:sort]%>
<div id="movies">
  <table>
    <thead>
      <tr>
        <th><%= link_to "Title", movies_path(sort: "title", direction: (params[:direction] == "asc" ? "desc" : "asc")) %></th>
        <th><%= link_to "Rating", movies_path(sort: "rating", direction: (params[:direction] == "asc" ? "desc" : "asc")) %></th>
        <th><%= link_to "Release Date", movies_path(sort: "release_date", direction: (params[:direction] == "asc" ? "desc" : "asc")) %></th>
      </tr>
    </thead>
    <% @movies.each do |movie| %>
      <tr>
        <%= render movie%>
      </tr>
    <% end %> 
  </table>
</div>

<button bgcolor="green"><%= link_to "New movie", new_movie_path %></button>
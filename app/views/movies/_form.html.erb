<%= form_with(model: movie, class: "movie-form") do |form| %>
  <% if movie.errors.any? %>
    <div class="error-explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>
      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :rating %>
    <%= form.text_field :rating %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4 %> <%# Use text_area for descriptions %>
  </div>

  <div class="field">
    <%= form.label :release_date %>
    <%= form.date_field :release_date %> <%# Use date_field for dates %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
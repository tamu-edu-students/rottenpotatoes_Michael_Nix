<div id="<%= dom_id movie %>" bgcolor= <%= (session[:sort_column] == movie.title ? (session[:direction] == "asc" ? "gray" : "lightgray") : "white") %>>
  <td>
    <%= movie.title %>
  </td>

  <td>
    <%= movie.rating %>
  </td>


  <td>
    <%= movie.release_date.strftime("%m/%d/%Y") %>
  </td>

</div>
